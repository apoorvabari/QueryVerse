# H2 Database Configuration
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console
spring.datasource.url=jdbc:h2:mem:coursedb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true

# Server Port
server.port=8080

# Feign Client Configuration (for internal communication demonstration)
# This tells Feign where to find the 'course-service'
# In a real microservice setup, this would be the URL of the actual course-service
# If using Eureka, you'd use the service ID instead of a direct URL.
feign.client.config.default.connectTimeout=5000
feign.client.config.default.readTimeout=5000

# Define the URL for the 'course-service' Feign client
# This is crucial for Feign to know where to send requests
# Since it's calling itself, it points to the local server.
course-service.ribbon.listOfServers=localhost:8080